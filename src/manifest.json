{
    "manifest_version": 2,
    "name": "box",
    "version": "0.1",
    "description": "使用右键菜单碎片化存储信息",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "options_ui": {
        "page": "index.html",
        "chrome_style": true,
        "open_in_tab": true
    },
    "permissions": [
        "clipboardWrite",
        "clipboardRead",
        "contextMenus"
    ],
    "background": {
        "scripts": ["manifest.js","vendor.js","background.js"]
    },
    "content_scripts": [
        {
            "matches" : [
                "http://*/*" ,
                "https://*/*" ,
                "file:///*"
            ] ,
            "js": ["manifest.js","vendor.js","jquery.min.js","content.js"]
        }
    ],
    "browser_action": {
        "default_icon": {
            "19": "icon.png",
            "38": "icon.png"
        },
        "default_title": "box",
        "default_popup": "index.html"
    }
}
